<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Margin="0,0,2,3">
        <Menu Height="25" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Height="25" Header="File">
                <MenuItem Header="Open" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Button Content="Next" HorizontalAlignment="Left" Margin="78,460,0,0" VerticalAlignment="Top" Width="253" Height="79" Click="Button_Click" Grid.Column="1"/>
        <Button Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="157" Margin="743,460,0,0" Height="79" Click="Button_Click_1" Grid.Column="1"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="79" Margin="354,460,0,0" VerticalAlignment="Top" Width="323" Click="Button_Click_2"/>

    </Grid>
</Window>
